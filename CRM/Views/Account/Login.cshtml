@model Test.Domain.ViewModel.LoginViewModel
@{
    ViewData["Title"] = "Вход";
}

<head>
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/style1.css" />
    <link rel="stylesheet" href="~/css/style2.css" />
    <link href="https://fonts.googleapis.com/css2?family=Comfortaa:wght@300&family=Jost:wght@300&display=swap" rel="stylesheet">
</head>

<div class="intro__10">
    <div class="conteiner__15">
        <div class="card col-md-12 custom-card15">
            <div class="intro__inner11">
                <div class="card__header">
                    <h3 style="font-size: 35px;">Вход</h3>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <h3 class="mb-0 text-center paragraphHome text-black" style="font-size: 30px;">Войдите как Admin</h3>
                    }
                </div>
                <div class="card__body">
                    <form asp-controller="Account" asp-action="Login">
                        <div asp-validation-summary="All" style="font-size:30px;" class="text-danger text-center"></div>
                        <div class="form__group">
                            <input asp-for="Name" class="form-control textbox-dg font-weight-bold text-center" placeholder="Имя" type="text">
                        </div>
                        <div class="form-group text-center">
                            <input autocomplete="new-password" asp-for="Password" placeholder="Пароль" class="form-control textbox-dg font-weight-bold text-center" type="password">
                        </div>
                        <button class="btn btn-primary float-right" type="submit">Войти</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>