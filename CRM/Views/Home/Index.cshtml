@model Test.Domain.ViewModel.AuthorViewModel

@{
    Layout = null;
}

<head>
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/style1.css" />
    <link href="https://fonts.googleapis.com/css2?family=Comfortaa:wght@300&family=Jost:wght@300&display=swap" rel="stylesheet">
</head>
    
<header class="header">
    <div class="conteiner">
        <div class="header__inner">
            <div class="header__logo">CRM - проект</div>

            <nav class="nav">
                <a class="nav__link" asp-controller="Home" asp-action="Index">Главная</a>
                <a class="nav__link" asp-controller="Home" asp-action="Service">Услуги</a>
                <a class="nav__link" asp-controller="Home" asp-action="Project">Проекты</a>
                <a class="nav__link" asp-controller="Home" asp-action="Blog">Блог</a>
                <a class="nav__link" asp-controller="Home" asp-action="Contact">Контакты</a>
                @if (!User.Identity.IsAuthenticated)
                {
                    <a class="nav__link" asp-controller="Account" asp-action="Login">Войти</a>
                }
            </nav>
        </div>
    </div>
</header>

<div class="intro">
    <div class="container">
        <div class="intro__inner">
            <h1 class="intro__tittle">IT - КОЛСАНТИНГ БЕЗ РЕГИСТРАЦИИ И СМС</h1>

            <a class="btn" asp-controller="Home" asp-action="CreateUser">Оставить заявку</a>
        </div>
    </div>
</div>


