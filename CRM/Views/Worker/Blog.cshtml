@using CRM.Models;
@model IEnumerable<Blog>

@{
    Layout = null;
}

<head>
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/style1.css" />
    <link rel="stylesheet" href="~/css/style2.css" />
    <link rel="stylesheet" href="~/css/styleWorker.css" />
    <link href="https://fonts.googleapis.com/css2?family=Comfortaa:wght@300&family=Jost:wght@300&display=swap" rel="stylesheet">
</head>

<body>
    <header class="gray-header">
        <div class="header-content">
            <h10>CRM - проект</h10>
            <a class="button add-button" asp-controller="Worker" asp-action="CreateBlog">Добавить блог</a>
        </div>
    </header>


    <div class="sidebar">
        <nav>
            <ul>
                <a class="nav__link1" asp-controller="Worker" asp-action="Index">Рабочий стол</a>
                <a class="nav__link1" asp-controller="Worker" asp-action="Wedo">Проекты</a>
                <a class="nav__link1" asp-controller="Worker" asp-action="About">Услуги</a>
                <a class="nav__link1" asp-controller="Worker" asp-action="Blog">Блог</a>
            </ul>
        </nav>
    </div>

    <section class="work__sheet">
        <table class="table__content">
            <tr class="table__name">
                <th style="width:100px;">Номер</th>
                <th style="width:200px;">Имя</th>
                <th style="width:500px;">Изображение</th>
                <th style="width:250px;">Текст</th>
            </tr>
            @if (Model != null)
            {
                foreach (var note in Model)
                {
                    <tr class="tabble">
                        <th style="width:100px;">@note.Id</th>
                        <th style="width:200px;">@note.Name</th>
                        <th style="width:500px;"><img src="~/image/blog/@note.Path
"></th>
                        <th style="width:250px;">@note.Text</th>
                        <th><a class="button add-button" asp-action="EditBlog" asp-route-id=@note.Id>Edit</a></th>
                        <th>
                            <form method="post" asp-action="DeleteBlog" asp-route-id=@note.Id>
                                <input class="button add-button" type="submit" value="Delete" />
                            </form>
                        </th>
                    </tr>
                }
            }

        </table>
    </section>
</body>