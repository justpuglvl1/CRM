@model CRM.Models.Notes

@{
    ViewData["Title"] = "Details";
}

<head>
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/style1.css" />
    <link rel="stylesheet" href="~/css/style2.css" />
    <link href="https://fonts.googleapis.com/css2?family=Comfortaa:wght@300&family=Jost:wght@300&display=swap" rel="stylesheet">
</head>

<div class="intro__10">
    <div class="conteiner__10">
        <div class="intro__inner10">
            <div class="card col-md-12 custom-card">
                <form asp-action="EditIndex" asp-controller="Worker" method="post">
                    <div asp-validation-summary="All" style="font-size:23px; font-family:Impact" class="text-danger text-center"></div>
                    <div class="mb-3">
                        <label class="form-label">Id</label>
                        <input type="number" asp-for="Id" value="@Model.Id" readonly/>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Дата</label>
                        <input type="text" asp-for="Date" value="@Model.Date" readonly />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Имя</label>
                        <input type="text" asp-for="Name" value="@Model.Name" readonly />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Описание</label>
                        <input type="text" asp-for="Description" value="@Model.Description" readonly />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Контакты</label>
                        <input type="text" asp-for="Address" value="@Model.Address" readonly />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Статус</label>
                        <input type="text" asp-for="Iban" value="@Model.Iban" />
                    </div>
                    <div>
                        <button class="btn btn-primary float-right" type="submit" asp-action="EditIndex" asp-controller="Worker">Отправить</button>
                        <a class="btn btn-primary float-right" asp-controller="Worker" asp-action="Wedo">Назад</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>